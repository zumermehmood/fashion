    <script>
        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.createElement('div');
        mobileMenu.className = 'md:hidden hidden absolute top-16 left-0 right-0 bg-white bg-opacity-95 backdrop-blur-sm z-40 p-4';
        mobileMenu.innerHTML = `
            <div class="flex flex-col space-y-2">
                <a href="#" class="text-gray-900 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">Home</a>
                <a href="#collections" class="text-gray-900 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">Collections</a>
                <a href="#" class="text-gray-900 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">About</a>
                <a href="#" class="text-gray-900 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">Contact</a>
            </div>
        `;
        document.body.appendChild(mobileMenu);

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
                mobileMenu.classList.add('hidden');
            });
        });

        // Initialize ScrollReveal for animations
        ScrollReveal().reveal('.hero-bg div', {
            delay: 200,
            distance: '50px',
            origin: 'bottom',
            duration: 1000
        });

        ScrollReveal().reveal('#collections h2', {
            delay: 200,
            distance: '50px',
            origin: 'bottom',
            duration: 800
        });

        ScrollReveal().reveal('#collections .group', {
            delay: 300,
            distance: '50px',
            origin: 'bottom',
            interval: 200,
            duration: 800
        });

        // Collection hover effect enhancement
        const collections = document.querySelectorAll('#collections .group');
        collections.forEach(collection => {
            collection.addEventListener('mouseenter', () => {
                collection.querySelector('img').style.transform = 'scale(1.05)';
            });
            collection.addEventListener('mouseleave', () => {
                collection.querySelector('img').style.transform = 'scale(1)';
            });
        });
    </script>
</body>
</html>
